{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "no-console": 0,
        "import/default": 0,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": ["main/**/__test/**"],
                "optionalDependencies": ["main/**/__test/**"],
                "peerDependencies": ["main/**/__test/**"]
            }
        ]
    }
}
